---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Terminal CV">
  <main
    class="w-full max-w-5xl mx-auto rounded-lg shadow-lg bg-gray-900/90 backdrop-blur-sm font-mono"
  >
    <!-- Terminal Header -->
    <div class="flex items-center px-4 py-2 bg-gray-700/50 rounded-t-lg">
      <div class="flex space-x-2">
        <div class="w-3 h-3 bg-red-500 rounded-full"></div>
        <div class="w-3 h-3 bg-yellow-500 rounded-full"></div>
        <div class="w-3 h-3 bg-green-500 rounded-full"></div>
      </div>
      <div class="flex-1 text-center text-sm text-gray-400">bash</div>
    </div>

    <!-- Terminal Body -->
    <div id="terminal-body" class="p-4 h-128 overflow-y-auto">
      <!-- Welcome Message -->
      <div>
        <p class="mb-4">
          Hey, my name is <span class="text-pink-400">Dmytro</span> and I am based in <span class="text-orange-400">Dublin</span>! Type <span
            class="text-green-400">'help'</span
          > to see a list of available commands.
        </p>
      </div>

      <div id="history"></div>

      <!-- Input Line -->
      <div id="input-line" class="flex items-center">
        <span class="text-green-400">visitor@dvynohradov:~$</span>
        <input
          id="command-input"
          type="text"
          class="bg-transparent border-none text-white focus:outline-none ml-2 caret-transparent"
          autofocus
          autocomplete="off"
        />
        <span class="w-2 h-4 bg-green-400 cursor"></span>
      </div>
    </div>
  </main>
</Layout>

<script src="../scripts/main.ts"></script>
