---
import "../styles/global.css";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Hi! I'm a Full-Stack Software Engineer who loves building with Python, React, and .NET ðŸ‘¨â€ðŸ’» Creating robust and scalable systems."
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
  </head>
  <body
    class="bg-gray-800 text-gray-100 flex items-center justify-center min-h-screen"
  >
    <div class="background-video">
      <video autoplay loop muted playsinline id="bg-video">
        <source src="/background.mp4" type="video/mp4" />
      </video>
      <div class="overlay"></div>
    </div>
    <slot />

    <div class="footer-links">
      <div class="social-links">
        <a
          href="mailto:dvynohradovv@proton.me"
          aria-label="Email"
          target="_blank"
          rel="noopener noreferrer"
        >
          <i class="fas fa-envelope"></i>
        </a>
        <a
          href="https://www.linkedin.com/in/dvynohradov/"
          aria-label="LinkedIn"
          target="_blank"
          rel="noopener noreferrer"
        >
          <i class="fab fa-linkedin"></i>
        </a>
        <a
          href="https://github.com/dvynohradovv"
          aria-label="GitHub"
          target="_blank"
          rel="noopener noreferrer"
        >
          <i class="fab fa-github"></i>
        </a>
        <a
          href="https://t.me/dvynohradov"
          aria-label="Telegram"
          target="_blank"
          rel="noopener noreferrer"
        >
          <i class="fab fa-telegram"></i>
        </a>
      </div>
      <div class="video-credit">
        Video by <a
          href="https://www.pexels.com/@jibarofoto/"
          target="_blank"
          rel="noopener noreferrer">Jibaro foto</a
        >
      </div>
    </div>

    <script>
      const video = document.getElementById("bg-video") as HTMLVideoElement;
      if (video) {
        video.playbackRate = 0.3;
      }
    </script>
  </body>
</html>

<style>
  .background-video {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
  }

  .background-video video {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
  }

  .footer-links {
    position: fixed;
    bottom: 10px;
    left: 0;
    right: 0;
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    z-index: 100;
    padding: 0 20px;
    box-sizing: border-box;
  }

  .social-links {
    display: flex;
    gap: 15px;
  }

  .social-links a {
    color: rgba(255, 255, 255, 0.7);
    font-size: 1.25rem;
    transition: all 0.2s ease-in-out;
  }

  .social-links a:hover {
    color: white;
    transform: scale(1.1);
  }

  .video-credit {
    font-size: 0.75rem;
    color: rgba(255, 255, 255, 0.5);
  }

  .video-credit a {
    color: rgba(255, 255, 255, 0.7);
    text-decoration: none;
  }

  .video-credit a:hover {
    text-decoration: underline;
  }
</style>
